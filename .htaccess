#Bloquear a listagem dos arquivos
Options -Indexes

#Liga a Rewrite
RewriteEngine on

#URL Base
RewriteBase /

#Regra de Rewrite
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
#RewriteRule ^(.*)$ /mini-framework-php/index.php [QSA,NC]
RewriteRule ^(.*)$ /mini-framework-php/index.php?idPagina=$1